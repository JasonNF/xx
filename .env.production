# ============================================
# 修仙世界 - 生产环境配置模板
# ============================================
# 部署后请修改实际值
# ============================================

# ==================== Telegram Bot配置 ====================
# 从 @BotFather 获取
BOT_TOKEN=your_production_bot_token_here
BOT_USERNAME=your_bot_username

# ==================== 数据库配置 ====================
# PostgreSQL (生产环境推荐)
DATABASE_URL=postgresql+asyncpg://xiuxian:your_password@localhost/xiuxian_prod

# 或使用 MySQL
# DATABASE_URL=mysql+aiomysql://xiuxian:your_password@localhost/xiuxian_prod

# 开发环境可使用 SQLite
# DATABASE_URL=sqlite+aiosqlite:///./data/xiuxian.db

# ==================== Redis配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 如果Redis有密码
# REDIS_PASSWORD=your_redis_password

# ==================== 游戏配置 ====================
GAME_NAME=修仙世界
GAME_VERSION=1.0.0

# ==================== 修炼配置 ====================
# 基础修炼速度(修为/小时)
BASE_CULTIVATION_RATE=100

# 基础突破成功率 (0.0-1.0)
BREAKTHROUGH_BASE_CHANCE=0.7

# ==================== 战斗配置 ====================
# PVE战斗冷却时间(秒)
PVE_COOLDOWN=300

# PVP战斗冷却时间(秒)
PVP_COOLDOWN=600

# ==================== 经济配置 ====================
# 每日签到奖励灵石
DAILY_SIGN_REWARD=1000

# 新手礼包灵石
NEWBIE_GIFT=5000

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=./data/logs/xiuxian.log

# ==================== 管理员配置 ====================
# 管理员Telegram ID (多个用逗号分隔)
# 获取方式: 发送 /start 给 @userinfobot
ADMIN_IDS=123456789,987654321

# ==================== 性能配置 ====================
# 数据库连接池大小
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis连接池大小
REDIS_POOL_SIZE=10

# ==================== 安全配置 ====================
# 密钥 (用于加密敏感数据)
SECRET_KEY=your_secret_key_here_change_in_production

# 允许的来源 (CORS)
ALLOWED_ORIGINS=*

# ==================== 积分同步API配置 ====================
# 如果需要与其他系统同步积分
API_SERVER_HOST=0.0.0.0
API_SERVER_PORT=8000
API_SECRET_KEY=your_api_secret_key

# ==================== 监控配置 ====================
# Sentry错误追踪 (可选)
# SENTRY_DSN=https://your_sentry_dsn

# Prometheus监控端口 (可选)
# PROMETHEUS_PORT=9090
