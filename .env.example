# Telegram Bot配置
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./data/xiuxian.db
# 或使用 PostgreSQL/MySQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/xiuxian
# DATABASE_URL=mysql+aiomysql://user:password@localhost/xiuxian

# Redis配置（可选，用于缓存）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 游戏配置
GAME_NAME=修仙世界
GAME_VERSION=1.0.0

# 修炼配置
BASE_CULTIVATION_RATE=100  # 基础修炼速度（修为/小时）
BREAKTHROUGH_BASE_CHANCE=0.7  # 基础突破成功率

# 战斗配置
PVE_COOLDOWN=300  # PVE战斗冷却时间（秒）
PVP_COOLDOWN=600  # PVP战斗冷却时间（秒）

# 经济配置
DAILY_SIGN_REWARD=1000  # 每日签到奖励灵石
NEWBIE_GIFT=5000  # 新手礼包灵石

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./data/logs/xiuxian.log

# 管理员Telegram ID（多个用逗号分隔）
ADMIN_IDS=123456789,987654321
